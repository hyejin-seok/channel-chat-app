<%- include("partials/header", {pageTitle}) %>
<div class="home-section">
  <div class="home-container">
    <div class="sidebar-container">
    <%- include("partials/sidebar") %>
    </div>


    <div class="chat-container">
      <% if (!currentRoomId) { %>
        <!-- Render content when no chat room is selected -->
        <div class="welcome-home">
          <h2>Welcome to the Chat Room!</h2>
          <p>Please select a chat room from the sidebar to start chatting.</p>
        </div>
        <% } else { %>
        <!-- Render content when a chat room is selected -->
      <div class="chatroom-wrapper">
        <div id="chat-header">
        </div>
        <ul id="messages">
          <!-- Messages will be appended here -->
        </ul>
      </div>

      <div class="form-wrapper">
        <form id="form" action="">
          <input type="text" id="input" autocomplete="off" placeholder="Write something..." />
          <button>Send Message</button>
        </form>
      </div>
      <% } %>
    </div>
    

  </div>
</div>
  
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.4/socket.io.js"></script>
<script src="/js/app.js"></script>
<script>
  const username = "<%= username %>";
</script>


