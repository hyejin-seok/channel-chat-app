<%- include("partials/header", {pageTitle}) %>
<div class="home-section">
  <div class="home-container">
    <div class="sidebar-container">
    <%- include("partials/sidebar") %>
    </div>


 <!-- Dissplay this content when A chat room is selected -->
    <div id="room-selected-content">
      <div class="chatroom-wrapper">
          <div id="chat-header">
          </div>
          <ul id="messages">
          </ul>
      </div>

      <div class="form-wrapper">
          <form id="form" action="">
            <input type="text" id="input" autocomplete="off" placeholder="Write something..." />
            <button><svg width="25px" height="25px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M20 4L3 11L10 14M20 4L13 21L10 14M20 4L10 14" stroke="#fff" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
              </svg></button>
          </form>
      </div>
    </div>

    <!-- Display this content when NO chat room is selected -->
    <div id="room-not-selected-content">
      <img src="/images/chat-pic.jpg" class="image" alt="chat-picture">
      <h2>Welcome to "Channel Cluster", <%= username %>! ðŸ‘‹</h2>
      <p>Please select a Chat Channel from the sidebar to start chatting.</p>

    </div>


    

  </div>
</div>
  
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.4/socket.io.js"></script>
<script src="/js/app.js"></script>
<script>
  const username = "<%= username %>";
</script>


